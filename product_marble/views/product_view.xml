        <record id="view_product_marble_search_all" model="ir.ui.view">
            <field name="name">product.marble.search.all</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_search_form_view_stock"/>
            <field name="arch" type="xml">
                <search string="Product" position="replace">
                <search string="Product">

                   <filter string="Raw Material" icon="terp-accessories-archiver" domain="['|',('categ_name','ilike','raw'),('categ_name','ilike','%materia%prima%')]" help="Raw material products" /> 
                   <filter string="Bachas"       icon="terp-accessories-archiver" domain="[('categ_name','ilike','bacha')]" help="Bachas products" />
                   <filter string="Inputs"       icon="terp-accessories-archiver" domain="['|',('categ_name','ilike','input'),('categ_name','ilike','%insumo%')]" help="Inputs products" />
                   <filter string="Services"     icon="terp-accessories-archiver" domain="[('categ_name','ilike','servic%')]" help="Services products" />
                   <separator/>
                   <filter string="Can be Sold" name="filter_to_sell" icon="terp-accessories-archiver-minus" domain="[('sale_ok','=',1)]"/>

                   <group expand="0" string="Context...">
                       <field name="pricelist_id" widget="selection" context="{'pricelist': self}" filter_domain="[]" groups="product.group_sale_pricelist"/> 
                       <field name="company_id" groups="base.group_multi_company"/>
                   </group>
                   <group  expand='0' string='Group by...'>
                       <filter string='Category' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'categ_id'}"/>
                       <filter string='Default Unit of Measure' icon="terp-mrp" domain="[]" context="{'group_by' : 'uom_id'}"/>
                       <filter string='Type' icon="terp-stock_symbol-selection" domain="[]" context="{'group_by' : 'type'}"/>
                       <filter string='Company' icon="terp-go-home" domain="[]" context="{'group_by' : 'company_id'}" groups="base.group_multi_company"/>
                   </group>

                </search>
                </search>
            </field>
        </record>

