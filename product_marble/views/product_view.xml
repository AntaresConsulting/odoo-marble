                <page string="Bacha" attrs="{'invisible':[('is_bacha','=',False)]}">
                    <group colspan="4">
                        <group>
                            <field name="bacha_tipo"/>
                            <field name="bacha_marca"/>
                            <field name="bacha_material"/>
                            <field name="bacha_acero"/>
                            <field name="bacha_colocacion"/>
                        </group>
                        <group>
