        <record id="view_product_marble_form" model="ir.ui.view">
            <field name="name">product.marble.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="stock.product_form_view_procurement_button" />
            <field name="arch" type="xml" >

                <page string="Information" position="after">

                    <field name="is_raw" invisible="1"/> 
                    <field name="is_bacha" invisible="1"/> 
                    <field name="uom_readonly" invisible="1"/> 

                    <page string="Raw Material" invisible="'is_raw'">
                        <group string="Details">
                            <field name="material"  attrs="{'required':True}" />
                            <field name="color"     attrs="{'required':True}" />
                            <field name="finished"  attrs="{'required':True}" />
                        </group>
                    </page>
                    <!--page string="Bachas" attrs="{'invisible':[('is_bacha','=',False)]}">
                        <group>
                        <group string="Bacha" attrs="{'invisible':[('is_bacha','=',False)]}" >
                            <field name="bacha_marca"    attrs="{'required':[('is_bacha','=',True)]}" />
                            <field name="bacha_material" attrs="{'required':[('is_bacha','=',True)]}" />
                        </group>
                        </group>
                    </page-->
                </page>
                
            </field>
        </record>

