                </page>

                <page string="Procurements" position="replace" />
                <group name="status" position="replace" />
                <group name="sale" position="replace" />

                <page string="Sales" position="after">

                    <page string="Dimensions" attrs="{'invisible':[('is_raw','=',False)]}">
                        <field name="dimension_ids" context="{'product_id':id}">
                            <tree string="Dimensions">
                                <field name="dimension"/>
                                <field name="total_units"/>
                                <field name="total_m2"/>
                                <field name="type"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>

                    <page string="Stock Moves" attrs="{'invisible':[('is_raw','=',False)]}">
                        <field name="stock_move_ids">
                            <tree string="Stock Moves">
                                <field name="date"/>
                                <field name="is_raw" invisible="1"/>
                                <field name="name" attrs="{'invisible':[('is_raw','=',False)]}"/>

                                <field name="qty_dimension" string="Units"/>
                                <field name="qty_product"/>
                                <field name="qty_balance"/>

                                <field name="product_uom" string="UOM"/>
                                <field name="state"/>
                            </tree>
                        </field>
                    </page>

                </page>
                <page string="Sales" position="replace" />
            </field>
        </record>

